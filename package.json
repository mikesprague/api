{
  "name": "api",
  "description": "Some API endpoints",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist/ && rimraf build/",
    "docs": "rimraf docs/ && npm run typedoc",
    "declarations": "rimraf types/ && tsc --emitDeclarationOnly",
    "github-trending-repos": "TZ='America/New_York' ts-node ./src/github-trending-repos.ts",
    "national-day": "TZ='America/New_York' ts-node ./src/national-day.ts",
    "posttypecheck": "npm run declarations",
    "test": "echo \"No tests yet...\"",
    "typecheck": "tsc --noEmit",
    "typedoc": "typedoc --out ./docs --entryPointStrategy expand ./src --excludeNotDocumented false --plugin typedoc-plugin-markdown --readme none",
    "typedoc-html": "typedoc --out ./dist/docs --entryPointStrategy expand ./src --excludeNotDocumented false --readme none"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "repository": {
    "url": "https://github.com/mikesprague/api"
  },
  "engines": {
    "node": ">= 18.x",
    "npm": ">= 8.x"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "dayjs": "1.11.9",
    "got": "13.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.11",
    "@swc/core": "^1.3.78",
    "@types/cheerio": "0.22.31",
    "@types/node": "20.5.4",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "cross-env": "7.0.3",
    "cz-git": "1.7.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "prettier": "3.0.2",
    "prettier-eslint": "15.0.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typedoc": "0.24.8",
    "typedoc-plugin-markdown": "3.15.4",
    "typescript": "5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": false,
      "commonjs": false,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "allowImportExportEverywhere": true,
      "parser": "@typescript-eslint/parser",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/.history/*",
      "**/node_modules/*"
    ],
    "rules": {
      "no-console": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
